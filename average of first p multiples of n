/*given an input number n and p find the average of first p multiples of n*/

import java.util.*;

class SumEven {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int n=sc.nextInt();
        System.out.print("Enter a number P: ");
        int p=sc.nextInt();
        int sum=n;
        
        for(int i=2;i<=p;i++){
                sum+=n*i;
        }
        
        System.out.print(sum/p);
    }
}
